<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/list_padding_and_margins"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivityFragment"
        android:background="@drawable/selector">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/list_large_text"
            android:id="@+id/exercise_name"
            android:layout_marginStart="@dimen/list_padding_and_margins"
            android:layout_marginTop="@dimen/list_padding_and_margins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/list_small_text"
            android:id="@+id/exercise_num_records"
            android:layout_marginStart="@dimen/list_padding_and_margins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exercise_name"
            android:background="@android:color/transparent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/list_large_text"
            android:id="@+id/rm_lbs_number"
            android:textAlignment="textEnd"
            android:layout_marginEnd="@dimen/list_padding_and_margins"
            android:layout_marginTop="@dimen/list_padding_and_margins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/list_small_text"
            android:id="@+id/rm_lbs_lable"
            android:textAlignment="textEnd"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rm_lbs_number"
            android:background="@android:color/transparent"/>

</android.support.constraint.ConstraintLayout>